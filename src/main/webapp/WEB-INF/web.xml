    <!--</jsp-property-group>-->
  <!--</jsp-config>-->


  <!-- Disable scripting in jsp's -->
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <scripting-invalid>
        true
      </scripting-invalid>
    </jsp-property-group>
  </jsp-config>

</web-app>